<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title || "Samuel Lie | Designer in Stockholm, Sweden" %></title>
    <link rel="stylesheet" href="https://use.typekit.net/cgy6igf.css">
    <%= stylesheet_link_tag "site" %>
  </head>
  <body class="container">
    <header class="header">
      <h1>
        <%= link_to 'â¬…  Samuel Lie', '/' %>
        <br>
        <%= current_page.data.title %>
      </h1>
    </header>
    <aside class="sidebar">
      <p class="text-secondary"><%= current_page.data.category %></p>
      <% if current_page.data.other_info %>
        <p class="text-secondary"><%= current_page.data.other_info %></p>
      <% end %>
    </aside>
    <article class="content">
      <%= yield %>
    </article>
  </body>
</html>
